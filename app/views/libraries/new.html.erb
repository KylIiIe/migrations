<h1>Створити бібліотеку</h1>

<% if flash[:alert] %>
  <div class="alert alert-danger">
    <%= flash[:alert] %>
  </div>
<% end %>

<%= form_with(model: @library, url: libraries_path) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name %>
  </div>

  <div class="field">
    <%= form.label :year_of_creation %>
    <%= form.text_field :year_of_creation %>
  </div>

  <p>
    <%= form.label :image, 'Add image' %>
    <%= form.file_field :image %>
  </p>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
