<h1>Усі книги</h1>
</p><%= link_to 'Назад', home_path %></p>

<table>
  <thead>
  <tr>
    <th>Title</th>
    <th>Published date</th>
    <th>Library</th>
    <th colspan="3"></th>
  </tr>
  </thead>

  <tbody>
  <% @books.each do |book| %>
    <tr>
      <td><%= book.name %></td>
      <td><%= book.year %></td>
      <td><%= book.library.name %></td>
      <td><%= link_to 'Показати', book %></td>
      <td><%= link_to 'Редагувати', edit_book_path(book) %></td>
      <td><%= link_to 'Видалити', book, method: :delete, data: { confirm: 'Ви впевнені?' } %></td>
    </tr>
  <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Створити книгу', new_book_path %>
